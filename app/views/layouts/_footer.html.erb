<footer>
  <small>
    <% if session[:cache] %>
      Signed in as <%= current_user.full_name %> | <%= link_to "return to admin", sessions_return_path, method: :post %>
    <% else %>
      <% if current_user %>
        Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
        <% if current_user.admin %>
          <p><%= link_to "admin main menu", admins_users_path %></p>
        <% end %> 
      <% else %>
        <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
      <% end %>
    <% end %>
  </small>
</footer>
