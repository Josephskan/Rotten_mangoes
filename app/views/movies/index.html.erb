<h1>Rotten Mangoes Movie Wall</h1>
<%= link_to "Add a movie!", new_movie_path %>
<hr>

<%= form_tag("/search", method: :get) do %>
  <%= label_tag( :title,"Search title:" ) %>
  <%= text_field_tag(:title) %>
  <%= submit_tag %>
<% end  %>
<hr>

<% @movies.each do |movie| %>
  <p>
    <% if movie.poster_image_url == "" %>
      <%= link_to image_tag(movie.upload_movie_image, size: "500x550"), movie_path(movie) %>
    <% else %>
      <%= link_to image_tag(movie.poster_image_url, size: "500x550"), movie_path(movie) %>
    <% end %>
  </p>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= movie.director %></h3>
  <p><%= movie.runtime_in_minutes %> min</p>
  <p><%= movie.release_date %></p>
  <p><%= movie.description %></p>
  <hr>
<% end %>





