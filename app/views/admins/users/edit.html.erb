<%= form_for [:admins, @user] do |f| %>
  <% if @user.errors.any? %>
    <div>
      <% pluralize(@user.errors.count, "error") %> prevented the completion of editting this user
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= link_to 'back to user listing', admins_users_path %>
  <div>
    <%= f.label "first name" %><br>
    <%= f.text_field "firstname" %>
  </div>
  <div>
    <%= f.label "last name" %><br>
    <%= f.text_field "lastname" %>
  </div>
  <div>
    <%= f.label "email" %><br>
    <%= f.text_field "email" %>
  </div>
  <div>
    <%= f.label "make #{@user.full_name} into an admin" %>
    <%= f.check_box "admin" %>
  </div>
  <div>
    <%= f.submit "Save" %> 
  </div>
<% end %>